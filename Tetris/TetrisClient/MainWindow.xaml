<Window x:Class="TetrisClient.Mainwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisClient"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Border Margin="5,5,0,0" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top">
        <StackPanel x:Name="GameInfo" DockPanel.Dock="Right" Margin="20,10,20,15">


            <DockPanel  HorizontalAlignment="Left" Margin="0,20,0,0">
                <Button Width="100" Margin="10" Height="70" Click="SinglePlayer">Single Player</Button>
                <Button Width="100" Margin="10" Height="70" Click="MultiPlayer">Multi Player</Button>
            </DockPanel>

        </StackPanel>
    </Border>

</Window>
